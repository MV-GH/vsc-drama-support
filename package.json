{
  "name": "vsc-drama-support",
  "displayName": "DRAMA support",
  "description": "Adds syntax highlighting",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "publisher": "MV-GH",
  "icon": "./media/upscaled_drama.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/MV-GH/vsc-drama-support"
  },
  "bugs": "https://github.com/MV-GH/vsc-drama-support/issues",
  "scripts": {
    "antlr4-gen": "antlr4 -Dlanguage=JavaScript -o src/antlr definitions/DRAMA_Lexer.g4 && antlr4 -Dlanguage=JavaScript -lib ./src/antlr -o src/antlr definitions/drama.g4 -no-listener -visitor",
    "test_antlr4": "antlr4-parse -v 4.12.0 ./definitions/DRAMA_Lexer.g4 ./definitions/drama.g4 start -gui ./testfiles/valid/test01.dra",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "antlr4-tests": "node ./src/test/antlr/grammar_tests.js"
  },
  "activationEvents": [
    "onLanguage:dra"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "drama",
        "aliases": [
          "DRAMA",
          "drama"
        ],
        "extensions": [
          ".dra"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "drama",
        "scopeName": "source.dra",
        "path": "./syntaxes/drama.tmLanguage.json"
      }
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "antlr4": "^4.12.0",
    "@types/vscode": "^1.76.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  },
  "type": "module"
}
