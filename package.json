{
  "name": "vsc-drama-support",
  "displayName": "DRAMA support",
  "description": "Adds syntax highlighting",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "publisher": "MV-GH",
  "icon": "./media/upscaled_drama.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/MV-GH/vsc-drama-support"
  },
  
  "scripts": {
    "antlr4-gen": "antlr4 -Dlanguage=TypeScript -o src/antlr definitions/DRAMA_Lexer.g4 && antlr4 -Dlanguage=TypeScript -lib ./src/antlr -o src/antlr definitions/drama.g4 -no-listener -visitor",
    "test_antlr4": "antlr4-parse ./definitions/DRAMA_Lexer.g4 ./definitions/drama.g4 start -gui ./tests/test01.dra",
    "test_antlr4-tokens": "antlr4-parse ./definitions/DRAMA_Lexer.g4 ./definitions/drama.g4 start -tokens ./tests/test01.dra"
  },
  "contributes": {
    "languages": [
      {
        "id": "drama",
        "aliases": [
          "DRAMA",
          "drama"
        ],
        "extensions": [
          ".dra"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "drama",
        "scopeName": "source.dra",
        "path": "./syntaxes/drama.tmLanguage.json"
      }
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "antlr4": "^4.12.0"
  }
}
