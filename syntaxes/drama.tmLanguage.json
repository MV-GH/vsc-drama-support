{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "drama",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"begin": "\\|",
			"comment": "Line comment",
			"end": "\\n",
			"name": "comment.line.drama"
		},{
			"comment": "label/symbol",
			"match": "^\\s*\\w+\\s*:",
			"name": "constant.character.drama"
		},{
			"comment": "numbers",
			"match": "-?\\b\\d+\\b",
			"name": "constant.numeric.drama"
		},
		{
			"name": "string.quoted.double.drama",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.drama",
					"match": "\\\\."
				}
			]
		},{
			"name":"constant.language.drama",
			"match": "(?i)\\b(R0|R1|R2|R3|R4|R5|R6|R7|R8|R9)\\b"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.drama",
				"match": "(?i)\\b(DRU|NWL|OPT|AFT|DEL|VER|HIA|BIG|VSP|MOD|LEZ|DRS|NWL|SPR|VGL|STP|EINDPR|RESGR)\\b"
			}]
		}
	},
	"scopeName": "source.dra"
}